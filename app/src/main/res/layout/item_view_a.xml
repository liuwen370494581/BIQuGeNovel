<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_rank_bg"
        android:orientation="horizontal"
        android:padding="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/id_book_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_99"
                android:textSize="12sp"
                tools:text="[玄幻奇幻]" />

            <TextView
                android:id="@+id/id_book_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/text_color_33"
                android:textSize="12sp"
                tools:ignore="EllipsizeMaxLines"
                tools:text="书名：那小子真帅" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/id_book_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_99"
                android:textSize="12sp"
                tools:text="我吃西红柿" />

            <TextView
                android:id="@+id/id_booK_new_chapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/text_color_33"
                android:textSize="12sp"
                tools:ignore="EllipsizeMaxLines"
                tools:text="最新章节：我哭了" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="更新时间"
                android:textColor="@color/text_color_99"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/id_book_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_33"
                android:textSize="12sp"
                tools:text="5-16" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>